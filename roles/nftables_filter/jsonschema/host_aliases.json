{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "pattern": "^[a-z0-9\\.-_]+$"
      },
      "value": {
        "type": ["string", "array"]
      }
    },
    "additionalItems": false,
    "required": ["name", "value"]
  }
}
